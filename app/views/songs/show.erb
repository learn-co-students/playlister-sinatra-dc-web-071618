<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>
<h1>Song Info</h1>

Title: <%= @song.name %><br>
Artist: <a href="/artists/<%=@song.artist.slug%>"><%= @song.artist.name %></a><br>
Genre(s): <% @song.genres.each do |genre| %>
<a href="/genres/<%=genre.slug%>"><%= genre.name %></a>
<% end %>

