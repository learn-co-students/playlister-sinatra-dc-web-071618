<h1>Create a new song</h1>

<form action="/songs" method="post">
<label for="song_name">Name: </label>
    <input type="text" name="song[name]" id="song_name">
    <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genres][]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%>
    <% end %>
    <br>
    Artist name: <input type="text" name="song[artist][name]" id="Artist Name">
    <input type="submit" value="Create">
</form>